.no-3d-flicker
  -webkit-backface-visibility hidden
  -webkit-perspective 1000

.drop-shadow
  position relative
  box-shadow 0 2px 2px rgba(0, 0, 0, 0.2), 0 0 10px rgba(0, 0, 0, 0.1) inset

.drop-shadow:before, .drop-shadow:after
  content ""
  position absolute
  top 50%
  right 10px
  bottom 0
  left 10px
  z-index -1
  shadow 0 0 0 rgba(0, 0, 0, 0.8)
  border-radius 100px / 10px

.hide
  display none !important
